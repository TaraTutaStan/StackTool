<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="ru.stack.tool.converters.LocalDateTimeConverter" >
                <class-a>java.time.LocalDateTime</class-a>
                <class-b>java.time.LocalDateTime</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping>
        <class-a>ru.stack.tool.serviceclient.model.Item</class-a>
        <class-b>ru.stack.tool.service.model.Question</class-b>
        <field>
            <a>owner.display_name</a>
            <b>owner</b>
        </field>
    </mapping>

</mappings>